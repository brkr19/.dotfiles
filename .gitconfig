# User configuration - configure in ~/.gitconfig.local
# See .gitconfig.local.example for template

[include]
    path = ~/.gitconfig.local

[credential]
    helper = cache --timeout=86400

[color]
    branch = auto
    diff = auto
    status = auto

[core]
    editor = vim

[diff]
    compactionHeuristic = true
    rename = copy
    check = true

[pager]
    color = true

[push]
    default = simple

[commit]
    gpgsign = false

[help]
    autocorrect = 1
[init]
	defaultBranch = main
